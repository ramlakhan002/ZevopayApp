@using Zevopay.Data.Entity
@model Packages

<div class="form-sample">
    <h5 class="card-description">
        @(@Model?.PackageId == 0?"Add Package":"Update Package")
    </h5>
    <input type="hidden" asp-for="PackageId" id="PackageId" value="@Model?.PackageId" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">PackagesName</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="PackageName" asp-for="PackageName" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
        </div>
    </div>

    <input type="button" class="btn btn-primary btn-rounded btn-fw" id="Package_Submit_btn" value="@(@Model?.PackageId == 0?"Add":"Update")" />
    <a class="btn btn-primary btn-rounded btn-fw" asp-controller="Admin" asp-action="PackagesList">back</a>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<script src="~/js/viewsscripts/packages.js"></script>