
<div id="login_div" class="container-scroller" style="background-image:url(../../wwwroot/images/auth/lockscreen-bg.jpg)">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo text-center">
                            <img src="~/images/logo.png" alt="logo">
                        </div>
                        <h6 class="font-weight-light">Sign in to continue.</h6>
                        <div class="pt-3 main-form">
                            <div id="login_element">
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-lg" id="EmailInput" placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" id="PasswordInput" placeholder="Password">
                                </div>
                            </div>
                            <div class="form-group" id="code_div" style="display:none">
                                <label>Enter Code from Authenticator App:</label>
                                <input type="text" class="form-control authenticator_code" required />
                            </div>
                            <div class="mt-3">
                                <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" id="sign_in">SIGN IN</a>
                                <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn varify_code" style="display:none;">SIGN IN</a>
                            </div>
                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" class="form-check-input">
                                        Keep me signed in
                                    </label>
                                </div>
                                <a href="#" class="auth-link text-black">Forgot password?</a>
                            </div>
                            @*  <div class="mb-2">
                            <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                            <i class="typcn typcn-social-facebook mr-2"></i>Connect using facebook
                            </button>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                            Don't have an account? <a href="register.html" class="text-primary">Create</a>
                            </div> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<div id="authenticater_div_with_qr" style="display:none">
    <div class="card mb-3 mt-5 shadow-lg p-3 mb-5 bg-body rounded" style="max-width: 1100px;margin:auto">

        <div class="row g-0">
            <div class="col-md-4">
                <img src="" id="qr_code" class="img-fluid rounded-start" />
            </div>
            <div class="col-md-8">
                <div class="card-body py-5 px-lg-5">
                    <div class="card-title">
                        <h2>Two-Factor Authentication</h2>
                        <p class="lead">Scan the QR code with Google Authenticator app and enter the code below:</p>
                    </div>

                    <div class="input_div">
                        <div class="form-group">
                            <label>Enter Code from Authenticator App:</label>
                            <input type="text" class="form-control authenticator_code" required />
                        </div>
                        <button type="button" class="btn btn-primary varify_code">Verify Code</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/login.js"></script>


